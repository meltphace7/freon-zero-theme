<header class="relative w-full h-40 bg-red-800 flex flex-col items-center">
    <nav class="w-full h-14 bg-black text-white flex items-center justify-between">
        <h1 class="text-3xl ml-5">{{ shop.name }}</h1>
        <ul class="relative nav-menu flex justify-around items-center w-1/3 text-white tracking-widest">

            {% for link in linklists.main-menu.links %}
                {% if link.links != blank %}
                <li class="flex items-center text-white cursor-pointer">
                    <p>{{ link.title }}</p>
                    {% render 'icon-dropdown' %}
                </li>
                <ul class="dropdown hidden w-50 bg-black p-3  rounded">
                {% for childlink in link.links %}
                    <li><a href="">{{ childlink.title }}</a></li>
                {% endfor %}
                </ul>
                {% else %}
                <li><a href={{ link.url }} class="text-white">{{ link.title }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
        <div class="flex items-center">
            <a href="#" class="mr-5">
                {% render 'icon-shopping-bag' %}
            </a>
        </div>
    </nav>
</header>

